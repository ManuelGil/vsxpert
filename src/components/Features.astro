---
import { Image } from 'astro:assets'

const features = [
  {
    icon: 'assets/features/icon-01.svg',
    title: 'Free and Open-Source',
    description:
      'The template is open-source, encouraging collaboration, transparency, and community contributions.'
  },
  {
    icon: 'assets/features/icon-02.svg',
    title: 'Development Environment Configuration',
    description:
      'Includes essential files (.editorconfig, .eslintignore, etc.) to standardize development practices and configurations.'
  },
  {
    icon: 'assets/features/icon-03.svg',
    title: 'Basic Extension Structure',
    description:
      'Defines a structured approach to extension development with directories for configs, controllers, helpers, models, providers, services, and tests.'
  },
  {
    icon: 'assets/features/icon-04.svg',
    title: 'Helper Functions',
    description:
      'Offers a collection of helper functions for creating commands, data providers, dialogs, file system providers, inflection providers, number providers, security providers, and text providers.'
  }
]
---

<!-- ====== Features Section Start -->
<section id="features" class="pb-8 pt-20 dark:bg-dark lg:pb-[70px] lg:pt-[120px]">
  <div class="container">
    <div class="-mx-4 flex flex-wrap">
      <div class="w-full px-4">
        <div class="mx-auto mb-12 max-w-[485px] text-center lg:mb-[70px]">
          <span class="mb-2 block text-lg font-semibold text-primary"> Features </span>
          <h2
            class="mb-3 text-3xl font-bold text-dark dark:text-white sm:text-4xl md:text-[40px] md:leading-[1.2]"
          >
            Main Features
          </h2>
          <p class="text-base text-body-color dark:text-dark-6">
            The template includes a variety of features to help you get started with extension
            development.
          </p>
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap items-center">
      <div class="w-full px-4 lg:w-1/2">
        <div class="mx-auto mb-12 max-w-[540px] lg:mb-[70px]">
          <h2
            class="mb-5 text-3xl font-bold leading-tight text-dark dark:text-white sm:text-[40px] sm:leading-[1.2]"
          >
            Basic Extension Commands
          </h2>
          <p class="mb-10 text-base leading-relaxed text-body-color dark:text-dark-6">
            Includes essential files (extension.ts, example.controller.ts) to kickstart extension
            development.
          </p>
        </div>
      </div>
      <div class="w-full px-4 lg:w-1/2">
        <div class="mx-auto mb-12 max-w-[540px] lg:mb-[70px]">
          <Image
            src="/assets/features/feature-01.png"
            alt="about image"
            loading="lazy"
            width="235"
            height="312"
            class="block h-full w-full object-cover object-center dark:hidden"
          />
          <Image
            src="/assets/features/feature-01-dark.png"
            alt="about image"
            loading="lazy"
            width="235"
            height="312"
            class="hidden h-full w-full object-cover object-center dark:block"
          />
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap items-center">
      <div class="w-full px-4 lg:w-1/2">
        <div class="mx-auto mb-12 max-w-[540px] lg:mb-[70px]">
          <Image
            src="/assets/features/feature-02.png"
            alt="about image"
            loading="lazy"
            width="235"
            height="312"
            class="block h-full w-full object-cover object-center dark:hidden"
          />
          <Image
            src="/assets/features/feature-02-dark.png"
            alt="about image"
            loading="lazy"
            width="235"
            height="312"
            class="hidden h-full w-full object-cover object-center dark:block"
          />
        </div>
      </div>
      <div class="w-full px-4 lg:w-1/2">
        <div class="mx-auto mb-12 max-w-[540px] lg:mb-[70px]">
          <h2
            class="mb-5 text-3xl font-bold leading-tight text-dark dark:text-white sm:text-[40px] sm:leading-[1.2]"
          >
            Basic Extension Views
          </h2>
          <p class="mb-10 text-base leading-relaxed text-body-color dark:text-dark-6">
            Provides view providers for the extension, facilitating user interaction and feedback.
          </p>
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap items-center">
      <div class="w-full px-4 lg:w-1/2">
        <div class="mx-auto mb-12 max-w-[540px] lg:mb-[70px]">
          <h2
            class="mb-5 text-3xl font-bold leading-tight text-dark dark:text-white sm:text-[40px] sm:leading-[1.2]"
          >
            OpenAI Integration
          </h2>
          <p class="mb-10 text-base leading-relaxed text-body-color dark:text-dark-6">
            Integrates OpenAI functionality into the extension, including services to interact with
            the OpenAI API and a chat provider for user interaction.
          </p>
        </div>
      </div>
      <div class="w-full px-4 lg:w-1/2">
        <div class="mx-auto mb-12 max-w-[540px] lg:mb-[70px]">
          <Image
            src="/assets/features/feature-03.png"
            alt="about image"
            loading="lazy"
            width="235"
            height="312"
            class="block h-full w-full object-cover object-center dark:hidden"
          />
          <Image
            src="/assets/features/feature-03-dark.png"
            alt="about image"
            loading="lazy"
            width="235"
            height="312"
            class="hidden h-full w-full object-cover object-center dark:block"
          />
        </div>
      </div>
    </div>
    <div class="-mx-4 flex flex-wrap">
      {
        features.map((feature) => (
          <div class="w-full px-4 md:w-1/2 lg:w-1/4">
            <div class="wow fadeInUp group mb-12" data-wow-delay=".1s">
              <div class="relative z-10 mb-10 flex h-[70px] w-[70px] items-center justify-center rounded-[14px] bg-primary">
                <span class="absolute left-0 top-0 -z-[1] mb-8 flex h-[70px] w-[70px] rotate-[25deg] items-center justify-center rounded-[14px] bg-primary bg-opacity-20 duration-300 group-hover:rotate-45" />
                <img src={feature.icon} alt="icon" />
              </div>
              <h4 class="mb-3 text-xl font-bold text-dark dark:text-white">{feature.title}</h4>
              <p class="mb-8 text-body-color dark:text-dark-6 lg:mb-9">{feature.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
<!-- ====== Features Section End -->
